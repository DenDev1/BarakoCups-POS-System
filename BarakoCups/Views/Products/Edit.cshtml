@model BarakoCups.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<section class="py-12 bg-gray-50 min-h-screen flex justify-center">
    <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-8">
        <h1 class="text-3xl font-bold text-[#3E0703] mb-6">Edit Product</h1>
        <form asp-action="Edit" class="space-y-6">
            <input type="hidden" asp-for="ProductId" />

            <!-- Name -->
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Name" class="w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-[#3E0703] focus:border-[#3E0703]" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <!-- Price -->
            <div>
                <label asp-for="Price" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Price" type="number" step="0.01" class="w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-[#3E0703] focus:border-[#3E0703]" />
                <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
            </div>

            <!-- Image URL -->
            <div>
                <label asp-for="ImageUrl" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="ImageUrl" class="w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-[#3E0703] focus:border-[#3E0703]" placeholder="Paste image link here..." />
                <span asp-validation-for="ImageUrl" class="text-red-500 text-sm"></span>
            </div>

            <!-- Stock -->
            <div>
                <label asp-for="Stock" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Stock" type="number" class="w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-[#3E0703] focus:border-[#3E0703]" />
                <span asp-validation-for="Stock" class="text-red-500 text-sm"></span>
            </div>

            <!-- IsActive -->
            <div class="flex items-center">
                <input asp-for="IsActive" class="h-4 w-4 text-[#3E0703] border-gray-300 rounded focus:ring-[#3E0703]" />
                <label class="ml-2 block text-sm text-gray-700">@Html.DisplayNameFor(model => model.IsActive)</label>
            </div>

            <!-- Buttons -->
            <div class="flex justify-between items-center pt-4">
                <a asp-action="Index" class="text-gray-600 hover:text-[#3E0703] font-medium">← Back to List</a>
                <button type="submit" class="px-6 py-2 bg-[#3E0703] text-white font-semibold rounded-lg shadow-md hover:bg-[#5A0A05] transition">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
