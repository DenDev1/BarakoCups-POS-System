@model BarakoCups.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="max-w-2xl mx-auto mt-10 bg-white shadow-lg rounded-xl p-8">
    <h1 class="text-3xl font-bold text-[#3E0703] mb-6 text-center">Add New Product</h1>

    <form asp-action="Create" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

        <!-- Product Name -->
        <div>
            <label asp-for="Name" class="block text-sm font-semibold text-gray-700 mb-1"></label>
            <input asp-for="Name" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#3E0703] focus:outline-none" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <!-- Price -->
        <div>
            <label asp-for="Price" class="block text-sm font-semibold text-gray-700 mb-1"></label>
            <input asp-for="Price" type="number" step="0.01" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#3E0703] focus:outline-none" />
            <span asp-validation-for="Price" class="text-red-600 text-sm"></span>
        </div>

        <!-- Image URL -->
        <div>
            <label asp-for="ImageUrl" class="block text-sm font-semibold text-gray-700 mb-1"></label>
            <input asp-for="ImageUrl" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#3E0703] focus:outline-none" />
            <span asp-validation-for="ImageUrl" class="text-red-600 text-sm"></span>
        </div>

        <!-- Stock -->
        <div>
            <label asp-for="Stock" class="block text-sm font-semibold text-gray-700 mb-1"></label>
            <input asp-for="Stock" type="number" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#3E0703] focus:outline-none" />
            <span asp-validation-for="Stock" class="text-red-600 text-sm"></span>
        </div>

        <!-- Is Active -->
        <div class="flex items-center">
            <input class="h-5 w-5 text-[#3E0703] focus:ring-[#3E0703] border-gray-300 rounded" asp-for="IsActive" />
            <label class="ml-2 text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.IsActive)</label>
        </div>

        <!-- Submit Button -->
        <div>
            <button type="submit" class="w-full bg-[#3E0703] text-white font-semibold py-3 px-6 rounded-lg shadow hover:bg-[#5e0b06] transition transform hover:scale-105">
                Save Product
            </button>
        </div>
    </form>

    <!-- Back to List -->
    <div class="mt-6 text-center">
        <a asp-action="Index" class="text-[#3E0703] font-semibold hover:underline">← Back to Product List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
