@model BarakoCups.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="max-w-3xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
    <h1 class="text-2xl font-bold text-red-600 mb-6">Delete Product</h1>

    <p class="text-gray-700 mb-6">Are you sure you want to delete the following product? This action cannot be undone.</p>

    <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 mb-6">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <dt class="font-medium text-gray-600">Name</dt>
                <dd class="text-gray-800">@Model.Name</dd>
            </div>
            <div>
                <dt class="font-medium text-gray-600">Price</dt>
                <dd class="text-gray-800">₱@Model.Price.ToString("0.00")</dd>
            </div>
            <div>
                <dt class="font-medium text-gray-600">Image URL</dt>
                <dd class="text-gray-800">@Model.ImageUrl</dd>
            </div>
            <div>
                <dt class="font-medium text-gray-600">Stock</dt>
                <dd class="text-gray-800">@Model.Stock</dd>
            </div>
            <div>
                <dt class="font-medium text-gray-600">Active</dt>
                <dd class="text-gray-800">
                    @if (Model.IsActive)
                    {
                        <span class="text-green-600 font-semibold">Yes</span>
                    }
                    else
                    {
                        <span class="text-red-600 font-semibold">No</span>
                    }
                </dd>
            </div>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="flex gap-4">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit"
                class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-200">
            Delete
        </button>
        <a asp-action="Index"
           class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-6 rounded-lg shadow-md transition duration-200">
            Cancel
        </a>
    </form>
</div>
