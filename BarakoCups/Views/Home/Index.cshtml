@{
    ViewData["Title"] = "Welcome";
}

<!-- Hero Section -->
<section class="bg-gradient-to-r from-[#CFAB8D] via-[#e6cbb0] to-[#CFAB8D] min-h-screen flex items-center px-6 relative overflow-hidden">
    <div class="grid md:grid-cols-2 gap-12 items-center w-full max-w-7xl mx-auto">

        <!-- Left Content -->
        <div class="text-center md:text-left space-y-8 animate-fade-in-up">
            <h1 class="text-5xl md:text-7xl font-extrabold text-[#3E0703] drop-shadow-lg leading-tight">
                Experience <br class="hidden md:block" /> Barako Boldness
            </h1>
            <p class="text-lg md:text-xl text-gray-800 max-w-lg mx-auto md:mx-0">
                The rich aroma of Batangas Barako coffee, crafted with passion. Your daily dose of boldness in every sip.
            </p>
            <a href="@Url.Action("Index","POS")"
               class="inline-block bg-[#3E0703] text-white px-10 py-4 rounded-full">
                ☕ Order Now
            </a>
        </div>

        <!-- Right Image -->
        <div class="flex justify-center md:justify-end animate-fade-in-up">
            <img src="/images/Cafe HUb.png" alt="Coffee Cup"
                 class="w-full max-w-lg rounded-3xl shadow-2xl transform hover:scale-105 transition duration-500">
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-20 bg-white text-center">
    <h2 class="text-4xl font-bold text-[#3E0703] mb-8">☕ About Us</h2>
    <p class="max-w-3xl mx-auto text-gray-600 text-lg leading-relaxed">
        At <span class="font-semibold text-[#3E0703]">My BarakoCups</span>, we celebrate Filipino coffee heritage.
        Our mission is simple: bring the boldest, richest Batangas Barako coffee straight to your cup while
        empowering local farmers and supporting communities.
    </p>
</section>

<!-- Products Section with Carousel -->
<section id="products" class="py-20 bg-[#CFAB8D] text-center">
    <h2 class="text-4xl font-bold text-[#3E0703] mb-12">Our Bestsellers</h2>

    <!-- Swiper Carousel -->
    <div class="swiper mySwiper max-w-6xl mx-auto">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="bg-white/80 backdrop-blur-md shadow-lg rounded-3xl p-6 hover:shadow-2xl transition transform hover:scale-105">
                    <img src="/images/1.jpg" alt="Barako Beans" class="rounded-2xl mb-4 w-full h-64 object-cover">
                    <h3 class="text-2xl font-semibold text-[#3E0703]">Barako Beans</h3>
                    <p class="text-gray-600 mt-2">Freshly roasted premium Batangas Barako beans for your home brew.</p>
                </div>
            </div>
            <div class="swiper-slide">
                <div class="bg-white/80 backdrop-blur-md shadow-lg rounded-3xl p-6 hover:shadow-2xl transition transform hover:scale-105">
                    <img src="/images/cofeee.jpg" alt="Cold Brew" class="rounded-2xl mb-4 w-full h-64 object-cover">
                    <h3 class="text-2xl font-semibold text-[#3E0703]">Cold Brew</h3>
                    <p class="text-gray-600 mt-2">Smooth, bold, and refreshing cold brew coffee, perfect for hot days.</p>
                </div>
            </div>
            <div class="swiper-slide">
                <div class="bg-white/80 backdrop-blur-md shadow-lg rounded-3xl p-6 hover:shadow-2xl transition transform hover:scale-105">
                    <img src="/images/coff33.jpg" alt="Espresso" class="rounded-2xl mb-4 w-full h-64 object-cover">
                    <h3 class="text-2xl font-semibold text-[#3E0703]">Espresso</h3>
                    <p class="text-gray-600 mt-2">Rich espresso shots crafted with authentic Barako beans.</p>
                </div>
            </div>
        </div>
        <!-- Swiper Pagination & Navigation -->
        <div class="swiper-pagination mt-6"></div>
        <div class="swiper-button-next text-[#3E0703]"></div>
        <div class="swiper-button-prev text-[#3E0703]"></div>
    </div>
</section>

<!-- Goals Section -->
<section id="goals" class="py-20 bg-white text-center">
    <h2 class="text-4xl font-bold text-[#3E0703] mb-8">🌱 Our Goals</h2>
    <p class="max-w-3xl mx-auto text-gray-600 text-lg leading-relaxed">
        We aim to preserve the legacy of Barako coffee while empowering local farmers and
        delivering world-class coffee experiences to every Filipino household.
    </p>
</section>

<!-- Testimonials Section -->
<section id="testimonials" class="py-20 bg-[#CFAB8D] text-center">
    <h2 class="text-4xl font-bold text-[#3E0703] mb-12">💬 What Our Customers Say</h2>
    <div class="grid md:grid-cols-3 gap-10 px-6">
        <div class="bg-white/90 backdrop-blur-md shadow-lg rounded-3xl p-8 hover:shadow-xl transition">
            <p class="text-gray-700 italic">"The best Barako coffee I’ve ever tasted! Bold and authentic."</p>
            <h4 class="mt-4 font-semibold text-[#3E0703]">– Juan D.</h4>
        </div>
        <div class="bg-white/90 backdrop-blur-md shadow-lg rounded-3xl p-8 hover:shadow-xl transition">
            <p class="text-gray-700 italic">"Every cup feels like home. Supporting local farmers makes it even better."</p>
            <h4 class="mt-4 font-semibold text-[#3E0703]">– Maria S.</h4>
        </div>
        <div class="bg-white/90 backdrop-blur-md shadow-lg rounded-3xl p-8 hover:shadow-xl transition">
            <p class="text-gray-700 italic">"I love their cold brew, refreshing and packed with flavor."</p>
            <h4 class="mt-4 font-semibold text-[#3E0703]">– Carlo R.</h4>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-20 bg-white-50 text-center">
    <h2 class="text-4xl font-bold text-[#3E0703] mb-8">📩 Contact Us</h2>
    <p class="max-w-2xl mx-auto text-gray-600 mb-10 text-lg">
        Have questions, feedback, or want to collaborate? Fill out the form below and we’ll get back to you soon.
    </p>

    <div class="max-w-2xl mx-auto bg-white/90 backdrop-blur-md shadow-lg rounded-3xl p-10 animate-fade-in-up">
        <form method="post" asp-action="Contact" asp-controller="Home" class="space-y-6">
            <div>
                <input type="text" name="Name" placeholder="Your Name" required
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3E0703] focus:outline-none" />
            </div>
            <div>
                <input type="email" name="Email" placeholder="Your Email" required
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3E0703] focus:outline-none" />
            </div>
            <div>
                <textarea name="Message" rows="4" placeholder="Your Message..." required
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3E0703] focus:outline-none"></textarea>
            </div>
            <button type="submit"
                    class="bg-[#3E0703] text-white px-8 py-4 rounded-full shadow-xl hover:bg-[#5e0b06] hover:shadow-2xl transition transform hover:scale-110">
                🚀 Send Message
            </button>
        </form>
    </div>
</section>

@section Scripts {
    <!-- SwiperJS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/site.js"></script>
}
