<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="My BarakoCups - Bringing the rich heritage of Barako coffee to every Filipino household." />
    <meta name="author" content="My BarakoCups Team" />
    <link href="/css/site.css" rel="stylesheet" />
<!-- Font Awesome (include in your layout if not yet) -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <title>@ViewData["Title"] - My BarakoCups</title>
    <!-- Add in <head> -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />



    <!-- TailwindCSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- FontAwesome (for social icons) -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body class="font-sans bg-gray-50">


    <!-- Navbar -->
    <header class="bg-white shadow-md fixed w-full z-50">
        <div class="container mx-auto flex items-center justify-between py-4 px-6">

            <!-- Logo on the Left -->
            <div class="flex items-center">
                <a href="/" class="text-2xl font-bold text-brown-700 flex items-center">
                    ☕ <span class="ml-2">BarakoCups</span>
                </a>
            </div>
            <!-- Menu on the Right -->
            <nav>
                <ul class="flex space-x-6 text-gray-700 font-semibold">
                    <li>
                        <a href="@Url.Action("Index", "Home")#about" class="hover:text-brown-600">About</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Products")" class="hover:text-brown-600">Products</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Home")#goals" class="hover:text-brown-600">Our Goals</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Logout", "Login")" class="hover:text-brown-600">Logout</a>
                    </li>
                </ul>
          
             
            </nav>

        </div>
    </header>


    <!-- Main Content -->
    <main class="pt-24">
        @RenderBody()
    </main>

    <!-- Modern Footer with Working Icons -->
    <footer class="bg-[#3E0703] text-white py-10 mt-10">
        <div class="max-w-6xl mx-auto px-4 flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0 text-center md:text-left">

            <!-- Copyright -->
            <div>
                <p class="text-sm md:text-base">&copy; @DateTime.Now.Year <span class="font-semibold">My BarakoCups</span>. All rights reserved.</p>
            </div>

            <!-- Social Icons -->
            <div class="flex space-x-6">
                <a href="https://facebook.com" target="_blank" class="hover:text-yellow-400 transition duration-200">
                    <i class="fa-brands fa-facebook fa-lg"></i>
                </a>
                <a href="https://instagram.com" target="_blank" class="hover:text-yellow-400 transition duration-200">
                    <i class="fa-brands fa-instagram fa-lg"></i>
                </a>
                <a href="https://twitter.com" target="_blank" class="hover:text-yellow-400 transition duration-200">
                    <i class="fa-brands fa-x-twitter fa-lg"></i> <!-- Twitter (X) icon -->
                </a>
            </div>
        </div>
    </footer>


    @RenderSection("Scripts", required: false)

</body>

</html>


<script src="~/js/site.js" asp-append-version="true"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
