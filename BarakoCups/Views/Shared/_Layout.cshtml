<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />\
    <meta name="description" content="My BarakoCups - Bringing the rich heritage of Barako coffee to every Filipino household." />
    <meta name="author" content="My BarakoCups Team" />
    <link href="/css/site.css" rel="stylesheet" />
    <title>@ViewData["Title"] - My BarakoCups</title>

    <!-- TailwindCSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- FontAwesome (for social icons) -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body class="font-sans bg-gray-50">

    <!-- Navbar -->
    <!-- Navbar -->
    <header class="bg-white shadow-md fixed w-full z-50">
        <div class="container mx-auto flex items-center justify-between py-4 px-6">

            <!-- Logo on the Left -->
            <div class="flex items-center">
                <a href="/" class="text-2xl font-bold text-brown-700 flex items-center">
                    ☕ <span class="ml-2">My BarakoCups</span>
                </a>
            </div>

            <!-- Menu on the Right -->
            <nav>
                <ul class="flex space-x-6 text-gray-700 font-semibold">
                    <li><a href="/Home/Index#about" class="hover:text-brown-600">About</a></li>
                    <li><a href="/Home/Index#products" class="hover:text-brown-600">Products</a></li>
                    <li><a href="/Home/Index#goals" class="hover:text-brown-600">Our Goals</a></li>
                </ul>
            </nav>
        </div>
    </header>


    <!-- Main Content -->
    <main class="pt-24">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-brown-800 text-white py-8 text-center mt-10">
        <p class="mb-4">&copy; @DateTime.Now.Year My BarakoCups. All Rights Reserved.</p>
        <div class="flex justify-center space-x-6">
            <a href="https://facebook.com" target="_blank" class="hover:text-yellow-300"><i class="fab fa-facebook fa-lg"></i></a>
            <a href="https://instagram.com" target="_blank" class="hover:text-yellow-300"><i class="fab fa-instagram fa-lg"></i></a>
            <a href="https://twitter.com" target="_blank" class="hover:text-yellow-300"><i class="fab fa-twitter fa-lg"></i></a>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
