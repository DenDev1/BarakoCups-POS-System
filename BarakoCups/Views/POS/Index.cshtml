@using BarakoCups.ViewModels
@using BarakoCups
@model CartVM
@{
    ViewData["Title"] = "Order Now";
    var products = (IEnumerable<Product>)ViewBag.Products;
}

<div class="max-w-6xl mx-auto py-10">
    <h1 class="text-4xl font-bold text-center mb-2">Order Now</h1>
    <p class="text-center text-gray-500 mb-8">Home / POS</p>

    <div class="grid md:grid-cols-3 gap-8">
        <div class="md:col-span-2">
            <h2 class="text-2xl font-bold mb-4">Products</h2>
            <div class="grid sm:grid-cols-2 gap-6">
                @foreach (var p in products)
                {
                    <div class="bg-white rounded-xl shadow border p-5 flex flex-col">
                        <img src="@p.ImageUrl" alt="@p.Name" class="h-40 object-contain mx-auto mb-4" />
                        <h3 class="text-xl font-semibold">@p.Name</h3>
                        <p class="text-gray-600 mb-4">₱@p.Price.ToString("0.00")</p>

                        <form asp-action="Add" method="post" class="mt-auto flex items-center gap-3">
                            <input type="hidden" name="productId" value="@p.ProductId" />
                            <input type="number" name="qty" value="1" min="1"
                                   class="w-20 border rounded-lg px-2 py-1" />
                            <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                                Add to Cart
                            </button>
                        </form>
                        <p class="text-xs text-gray-400 mt-2">In stock: @p.Stock</p>
                    </div>
                }
            </div>
        </div>

        <!-- Cart -->
        <div>
            <h2 class="text-2xl font-bold mb-4">Cart</h2>
            <div class="bg-white rounded-xl shadow border p-5">
                @if (!Model.Items.Any())
                {
                    <p class="text-gray-500">Your cart is empty.</p>
                }
                else
                {
                    <table class="w-full text-sm mb-4">
                        <thead class="border-b">
                            <tr class="text-left">
                                <th class="py-2">Product</th>
                                <th class="py-2">Quantity</th>
                                <th class="py-2 text-right">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var i in Model.Items)
                        {
                            <tr class="border-b">
                                <td class="py-2">@i.Name</td>
                                <td class="py-2">
                                    <form asp-action="UpdateQty" method="post" class="flex items-center gap-2">
                                        <input type="hidden" name="productId" value="@i.ProductId" />
                                        <input type="number" name="qty" value="@i.Quantity" min="0"
                                               class="w-20 border rounded px-2 py-1" />
                                        <button class="text-blue-600">Update</button>
                                        <button formaction="@Url.Action("Remove","POS")" formmethod="post"
                                                name="productId" value="@i.ProductId"
                                                class="text-red-600">Remove</button>
                                    </form>
                                </td>
                                <td class="py-2 text-right">₱@i.Subtotal.ToString("0.00")</td>
                            </tr>
                        }
                        </tbody>
                    </table>

                    <div class="flex items-center justify-between mb-3">
                        <span class="font-semibold">Total:</span>
                        <span class="text-lg font-bold">₱@Model.Total.ToString("0.00")</span>
                    </div>

                    <div class="space-y-2">
                        <a href="@Url.Action("Checkout","POS")"
                           class="block text-center bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700">
                            Checkout
                        </a>
                        <form asp-action="Empty" method="post">
                            <button class="w-full border px-4 py-2 rounded-lg font-semibold hover:bg-gray-50">
                                Empty Cart
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
