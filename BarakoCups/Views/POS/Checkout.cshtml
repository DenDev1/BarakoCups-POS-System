@model CheckoutVM
@{
    ViewData["Title"] = "Checkout";
}


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <h2 class="fw-bold text-center mb-4">🧾 Checkout</h2>

                    <form asp-action="PlaceOrder" method="post">
                        <!-- Payment Methods -->
                        <h5 class="mb-3 fw-semibold">Payment Method</h5>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" name="PaymentMethod" value="Cash" id="payCash" checked />
                            <label class="form-check-label d-flex align-items-center" for="payCash">
                                <i class="bi bi-wallet-fill me-2 text-primary"></i> Cash on Delivery
                            </label>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="radio" name="PaymentMethod" value="GCash" id="payGCash" />
                            <label class="form-check-label d-flex align-items-center" for="payGCash">
                                <img  src="/images//gcash.jpeg" alt="GCash" height="24" width="19" class="me-2" />
                                GCash via PayMongo
                            </label>
                        </div>

                   

                        <button type="submit" class="btn btn-primary w-100 py-2 fs-5">
                            Confirm & Pay
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
