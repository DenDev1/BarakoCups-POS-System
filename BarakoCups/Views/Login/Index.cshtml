@model BarakoCups.Models.Account.Users
@{
    Layout = "Layout_Login";
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BarakoCups</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Jitech_Inventory_System.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/custom/bootstrap-icons/font/bootstrap-icons.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

    <style>
        .login-container {
            width: 100%;
            max-width: 400px;
            background-color: #fff;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
        }

        .form-label i {
            color: #6c757d;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .eye-icon {
            color: #6c757d;
            font-size: 20px;
        }

            .eye-icon:hover {
                color: #007bff;
            }

        .form-control {
            height: 45px;
            font-size: 16px;
        }

        .btn-link {
            font-size: 14px;
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center" style="height: 100vh; background-color: #f4f7fa;">
    <div class="container-fluid">
        <section class="d-flex justify-content-center align-items-center min-vh-100">
            <div class="login-container p-4 shadow-lg rounded-4">
                <div class="text-center mb-4">
                    <!-- Logo or Text Placeholder -->
                    <h2 class="fw-bold" style="color: #333;">Welcome Back</h2>
                </div>

                <form asp-action="Login" method="post" aria-labelledby="login-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"><i class="fa fa-user"></i> Username</label>
                        <input asp-for="Username" class="form-control rounded-3" placeholder="Enter Username" aria-required="true" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3 position-relative">
                        <label asp-for="Password" class="form-label"><i class="fa fa-lock"></i> Password</label>
                        <div class="position-relative">
                            <input asp-for="Password" type="password" class="form-control rounded-3" placeholder="Enter Password " aria-required="true" id="passwordField" />
                            <i class="fas fa-eye eye-icon" id="open" onclick="togglePassword()" style="position: absolute; top: 50%; right: 10px; transform: translateY(-50%); cursor: pointer;"></i>
                            <i class="fas fa-eye-slash eye-icon d-none" id="closed" onclick="togglePassword()" style="position: absolute; top: 50%; right: 10px; transform: translateY(-50%); cursor: pointer;"></i>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button style="background: #3E0703;" type="submit" class="btn btn-dark btn-primary rounded-pill w-75">Login</button>
                    </div>

                    <div class="text-center mt-3">
                        <a asp-controller="Login" asp-action="ForgotPassword" class="text-muted text-decoration-none">Forgot Password?</a>
                    </div>
                </form>
            </div>
        </section>
    </div>
    <!-- JavaScript to toggle password visibility -->
    <script>
        function togglePassword() {
            const passwordField = document.getElementById('passwordField');
            const openEyeIcon = document.getElementById('open');
            const closedEyeIcon = document.getElementById('closed');

            // Toggle the password field visibility
            if (passwordField.type === "password") {
                passwordField.type = "text";
                openEyeIcon.classList.add('d-none'); // Hide open eye
                closedEyeIcon.classList.remove('d-none'); // Show closed eye
            } else {
                passwordField.type = "password";
                openEyeIcon.classList.remove('d-none'); // Show open eye
                closedEyeIcon.classList.add('d-none'); // Hide closed eye
            }
        }
    </script>
</body>
</html>